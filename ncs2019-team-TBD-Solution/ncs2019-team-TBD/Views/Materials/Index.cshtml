@model IEnumerable<ncs2019_team_TBD.Models.Material>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>



<div class="row">

    @* apo i=6 mexri i=9 ka8ws  exoume 4 materials standard *@
    @{
        int i = 6;
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@Url.Content(string.Format("~/images/"+i+".jpg", i++))" alt="  @Html.DisplayFor(modelItem => item.Name) " width="300" height="300">
                    <div class="caption">
                        <h3> @Html.DisplayFor(modelItem => item.Name) </h3>

                        <p>
                            <a asp-action="GetProducts" asp-route-id="@item.Id" class="btn btn-primary" role="button">View Products</a>
                            @* to panw, na dixnei ta proionta tis ekastote katigorias, kai oxi ola ta proionta *@
                            <a asp-action="Details" class="btn btn-primary" role="button" asp-route-id="@item.Id">Details</a>

                        </p>

                    </div>
                </div>
            </div>
        }
    }
</div>


