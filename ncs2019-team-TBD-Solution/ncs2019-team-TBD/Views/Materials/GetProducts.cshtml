@model ncs2019_team_TBD.Models.Material



@{
    ViewData["Title"] = "GetProducts";
}

<h2>Index</h2>

<p>
    Products of the category
</p>


<div class="row">

    @*prepei na prosexoume pws onomazoume tis eikones, giati me tin sira tou i pernane sto view, epidi etsi tis kaloume*@
    @{
        int i = 1;
        @foreach (var item in Model.ProductMaterials)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@Url.Content(string.Format("~/images/"+i+".jpg", i++))" alt=" @Html.DisplayFor(modelItem => item.ProductId) " width="242" height="200">
                    <div class="caption">
                        <h3> @Html.DisplayFor(modelItem => item.Product.Name) </h3>
                        <p> @Html.DisplayFor(modelItem => item.Product.Description) </p>
                        <p>
                            <a asp-action="Add" asp-route-productId="@item.ProductId" asp-route-quantity="1" asp-route-materialId="@item.MaterialId" class="btn btn-primary" role="button">Add to Cart</a>
                            @*stin akrivos panw grami  ftiaxnes to path gia to "Add to Cart"*@
                            <a asp-controller="Products" asp-action="Details" class="btn btn-primary" role="button" asp-route-id="@item.ProductId">Details</a>

                            <u><strong> @Html.DisplayFor(modelItem => item.Product.Price) </strong></u>
                            <span class="glyphicon glyphicon-eur" aria-hidden="true"></span>
                        </p>

                    </div>
                </div>
            </div>
        }
    }
</div>