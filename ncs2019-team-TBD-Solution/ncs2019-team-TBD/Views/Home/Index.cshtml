@{
    ViewData["Title"] = "Home Page";
}
<style>
    .carousel-caption {
        color: #2b2b2b;
    }

    .col-md-3 {
        width: 25%;
        margin-right: 100px;
        margin-top: 50px;
    }

    .wakanda {
        margin-top: 50px;
    }

</style>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/carousel_1.jpg" alt="Products" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Check our Products.
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary" role="button" >See More</a>
                    @*<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        See More
                    </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel_2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn more about our Company.
                    <a asp-controller="Home" asp-action="About" class="btn btn-primary" role="button">About Us</a>
                    @*<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
            Learn More
        </a>*@
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/carousel_3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    See our finest collection of materials.
                    <a asp-controller="Materials" asp-action="Index" class="btn btn-primary" role="button">See More</a>
                    @*<a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525027&clcid=0x409">
            Learn More
        </a>*@
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

