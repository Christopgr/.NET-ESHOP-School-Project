@model ncs2019_team_TBD.Controllers.Modelo

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>

            </div>
            <div>
                <ul>
                    <!--emfanizei tis epiloges gia ta Material pou exoume sthn vash
                        kai apothikeuei poia ekanes check sto SelectedMaterials molis pathseis submit
                    -->
                    @foreach (SelectListItem m in ViewBag.MaterialId)
                    {
                        <li>
                            <input type="checkbox" name="SelectedMaterials" value="@m.Value" checked="@m.Selected">
                            <label>@m.Text</label>
                        </li>
                    }
                </ul>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.InventoryQuantity" class="control-label"></label>
                <input asp-for="Product.InventoryQuantity" class="form-control" />
                <span asp-validation-for="Product.InventoryQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.SerialNumber" class="control-label"></label>
                <input asp-for="Product.SerialNumber" class="form-control" />
                <span asp-validation-for="Product.SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
