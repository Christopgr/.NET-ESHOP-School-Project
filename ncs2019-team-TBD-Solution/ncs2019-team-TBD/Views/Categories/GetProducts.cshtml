@model ncs2019_team_TBD.Models.Category



@{
    ViewData["Title"] = "GetProducts";
}

<h2>Index</h2>

<p>
    Products of the category
</p>


<div class="row">

    @*prepei na prosexoume pws onomazoume tis eikones, giati me tin sira tou i pernane sto view, epidi etsi tis kaloume*@
    @{
        int i = 1;
        @foreach (var item in Model.Products)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="@Html.DisplayFor(modelItem => item.Img)" style="border-radius:5px; border:1px solid #bbb9b9;width:100% !important;" />
                    <div class="caption">
                        <h3> @Html.DisplayFor(modelItem => item.Name) </h3>
                        <p> @Html.DisplayFor(modelItem => item.Description) </p>
                        <p>

                            <button type="button" onclick="addToCart('@item.Id',1)" class="btn btn-default addCartButton"> Add to Cart </button>
                            @*stin akrivos panw grami  ftiaxnes to path gia to "Add to Cart"*@
                            <a asp-action="Details" class="btn btn-primary" role="button" asp-route-id="@item.Id">Details</a>

                            <u><strong> @Html.DisplayFor(modelItem => item.Price) </strong></u>
                            <span class="glyphicon glyphicon-eur" aria-hidden="true"></span>
                        </p>

                    </div>
                </div>
            </div>
        }
    }
</div>